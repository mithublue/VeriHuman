// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String         @id @default(cuid())
  email                 String         @unique
  name                  String?
  password              String?        @db.Text
  image                 String?        @db.Text
  emailVerified         DateTime?
  verificationToken     String?        @unique
  isActive              Boolean        @default(false)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  totalWordsHumanized   Int            @default(0)
  totalDetections       Int            @default(0)
  lastActivity          DateTime?
  
  activities            ActivityLog[]
  rateLimits            RateLimit[]
  apiUsage              ApiUsage[]
  accounts              Account[]
  sessions              Session[]
  generatedCopies       GeneratedCopy[]
  
  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String
  type       String   // 'humanize' or 'detect'
  provider   String?  // AI model used: 'Google Gemini', 'OpenRouter', 'OpenAI'
  wordCount  Int
  status     String   // 'success' or 'failed'
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([createdAt])
  @@index([provider, createdAt])
}

model RateLimit {
  id        String   @id @default(cuid())
  userId    String
  action    String   // 'humanize' or 'detect'
  timestamp DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, action, timestamp])
}

model ApiUsage {
  id        String   @id @default(cuid())
  userId    String
  action    String   // 'humanize' or 'detect'
  provider  String   // 'gemini', 'openrouter', 'pollinations'
  wordCount Int
  success   Boolean
  timestamp DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, action, timestamp])
  @@index([provider, timestamp])
}

model GeneratedCopy {
  id          String   @id @default(cuid())
  userId      String?
  productName String
  inputData   String   @db.Text
  generated   String   @db.Text
  platform    String
  tone        String
  createdAt   DateTime @default(now())
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}
